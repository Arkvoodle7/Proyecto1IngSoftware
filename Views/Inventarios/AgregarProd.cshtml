@{
    ViewData["Title"] = "Agregar Producto";
}

<div class="container-fluid py-4">
    <h1 class="text-success mb-4">Agregar Producto</h1>

    <div class="card shadow-lg">
        <div class="card-header bg-success text-white">
            <h5><i class="fas fa-plus-circle"></i> Nuevo Producto</h5>
        </div>
        <div class="card-body">
            <form>
                <div class="mb-3">
                    <label for="producto" class="form-label">Nombre del Producto</label>
                    <input type="text" class="form-control form-control-lg" id="producto" placeholder="Ingrese el nombre del producto">
                </div>
                <div class="mb-3">
                    <label for="categoria" class="form-label">Categoría</label>
                    <input type="text" class="form-control form-control-lg" id="categoria" placeholder="Ingrese la categoría">
                </div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="cantidad" class="form-label">Cantidad</label>
                        <input type="number" class="form-control form-control-lg" id="cantidad" placeholder="Ingrese la cantidad">
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="precio" class="form-label">Precio</label>
                        <input type="text" class="form-control form-control-lg" id="precio" placeholder="Ingrese el precio">
                    </div>
                </div>
                <div class="mb-3">
                    <label for="fechaIngreso" class="form-label">Fecha de Ingreso</label>
                    <input type="date" class="form-control form-control-lg" id="fechaIngreso">
                </div>
                <button type="submit" class="btn btn-success btn-lg w-100 shadow">Guardar Producto</button>
            </form>
        </div>
    </div>
</div>
