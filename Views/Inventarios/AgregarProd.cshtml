@model Proyecto1IngSoftware.Models.UsuarioViewModel

@{
    ViewData["Title"] = "Agregar Producto";
}

<div class="container-fluid py-4">
    <h1 class="text-success mb-4">Agregar Producto</h1>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <div class="card shadow-lg">
        <div class="card-header bg-success text-white">
            <h5><i class="fas fa-plus-circle"></i> Nuevo Producto</h5>
        </div>
        <div class="card-body">
            <form method="post" action="@Url.Action("AgregarProducto", "Inventarios")">
                <div class="mb-3">
                    <label for="codigo" class="form-label">Código</label>
                    <input type="number" class="form-control" id="codigo" name="codigo" placeholder="Código del producto" required>
                </div>
                <div class="mb-3">
                    <label for="descripcion" class="form-label">Descripción</label>
                    <input type="text" class="form-control" id="descripcion" name="descripcion" placeholder="Descripción del producto" required>
                </div>
                <div class="mb-3">
                    <label for="precio" class="form-label">Precio</label>
                    <input type="number" class="form-control" id="precio" name="precio" step="0.01" placeholder="Precio" required>
                </div>
                <div class="mb-3">
                    <label for="unidadesDisponibles" class="form-label">Unidades Disponibles</label>
                    <input type="number" class="form-control" id="unidadesDisponibles" name="unidadesDisponibles" placeholder="Unidades disponibles" required>
                </div>
                <div class="mb-3">
                    <label for="disparador" class="form-label">Estado</label>
                    <select class="form-control" id="disparador" name="disparador" required>
                        <option value="true">Activo</option>
                        <option value="false">Inactivo</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-success btn-lg w-100">Guardar Producto</button>
            </form>
        </div>
    </div>
</div>


