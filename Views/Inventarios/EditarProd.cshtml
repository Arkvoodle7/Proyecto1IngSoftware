@model Proyecto1IngSoftware.Models.ProductoViewModel

@{
    ViewData["Title"] = "Editar Producto";
}

<div class="container-fluid py-4">
    <h1 class="text-warning mb-4">Editar Producto</h1>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }

    <div class="card shadow-lg">
        <div class="card-header bg-warning text-white">
            <h5><i class="fas fa-edit"></i> Modificar Producto</h5>
        </div>
        <div class="card-body">
            <form asp-action="EditarProducto" method="post">
                <div class="mb-3">
                    <label asp-for="Codigo" class="form-label">Código</label>
                    <input asp-for="Codigo" class="form-control" readonly />
                </div>
                <div class="mb-3">
                    <label asp-for="Descripcion" class="form-label">Descripción</label>
                    <input asp-for="Descripcion" class="form-control" required />
                </div>
                <div class="mb-3">
                    <label asp-for="Precio" class="form-label">Precio</label>
                    <input asp-for="Precio" class="form-control" type="number" step="0.01" required />
                </div>
                <div class="mb-3">
                    <label asp-for="UnidadesDisponibles" class="form-label">Unidades Disponibles</label>
                    <input asp-for="UnidadesDisponibles" class="form-control" type="number" required />
                </div>
                <div class="mb-3">
                    <label asp-for="Disparador" class="form-label">Estado</label>
                    <select asp-for="Disparador" class="form-select" required>
                        <option value="true">Activo</option>
                        <option value="false">Inactivo</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-warning w-100">Guardar Cambios</button>
            </form>
        </div>
    </div>
</div>
