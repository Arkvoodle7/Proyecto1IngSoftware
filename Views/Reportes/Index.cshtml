@{
    ViewData["Title"] = "Gestión de Reportes";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Gestión de Reportes</h1>
    <h3 class="mt-4"></h3>

    <!-- Filtros de Reporte -->
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-filter me-1"></i>
            Filtros para Generar Reportes
        </div>
        <div class="card-body">
            <form asp-action="GenerarReporte" method="post">
                <div class="row">
                    <!-- Filtro de tipo de reporte -->
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="tipoReporte">Tipo de Reporte</label>
                            <select class="form-control" id="tipoReporte" name="tipoReporte">
                                <option value="facturas">Facturas</option>
                                <option value="ordenes">Órdenes de Compra</option>
                            </select>
                        </div>
                    </div>
                    <!-- Filtro de rango de fechas -->
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="fechaInicio">Fecha de Inicio</label>
                            <input type="date" class="form-control" id="fechaInicio" name="fechaInicio">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="fechaFin">Fecha de Fin</label>
                            <input type="date" class="form-control" id="fechaFin" name="fechaFin">
                        </div>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-12">
                        <button type="submit" class="btn btn-primary">Generar Reporte</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Tabla de Reportes Generados -->
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            Resultados del Reporte
        </div>
        <div class="card-body">
            <table id="datatablesSimple" class="table table-striped">
                <thead>
                    <tr>
                        <th>Producto</th>
                        <th>Cantidad</th>
                        <th>Cliente/Proveedor</th>
                        <th>Fecha</th>
                        <th>Total</th>
                        <th>Estado</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Paracetamol</td>
                        <td>100</td>
                        <td>Juan Pérez</td>
                        <td>2024/01/01</td>
                        <td>$1000</td>
                        <td>Aprobada</td>
                    </tr>
                    <!-- Más resultados -->
                </tbody>
            </table>
        </div>
    </div>

    <!-- Botones de Exportación -->
    <div class="row mb-4">
        <div class="col-md-6">
            <button class="btn btn-danger btn-block">Exportar a PDF</button>
        </div>
        <div class="col-md-6">
            <button class="btn btn-success btn-block">Exportar a Excel</button>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/umd/simple-datatables.min.js" crossorigin="anonymous"></script>
    <script src="~/js/datatables-simple-demo.js"></script>
}
