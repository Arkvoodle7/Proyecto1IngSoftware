@{
    ViewData["Title"] = "Gestión de Reportes";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Gestión de Reportes</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Dashboard">Dashboard</a></li>
        <li class="breadcrumb-item active">Reportes</li>
    </ol>
    <div class="card mb-4">
        <div class="card-body">
            Aquí puedes gestionar los reportes. Usa la tabla a continuación para visualizar los reportes generados.
        </div>
    </div>
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            Reportes Generados
        </div>
        <div class="card-body">
            <table id="datatablesSimple">
                <thead>
                    <tr>
                        <th>Nombre del Reporte</th>
                        <th>Fecha de Generación</th>
                        <th>Tipo de Reporte</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Nombre del Reporte</th>
                        <th>Fecha de Generación</th>
                        <th>Tipo de Reporte</th>
                        <th>Acciones</th>
                    </tr>
                </tfoot>
                <tbody>
                    <tr>
                        <td>Reporte de Ventas</td>
                        <td>2024/01/01</td>
                        <td>Ventas</td>
                        <td><a href="#">Ver</a> | <a href="#">Descargar</a></td>
                    </tr>
                    <!-- Aquí puedes agregar más filas de reportes -->
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/umd/simple-datatables.min.js" crossorigin="anonymous"></script>
    <script src="~/js/datatables-simple-demo.js"></script>
}
