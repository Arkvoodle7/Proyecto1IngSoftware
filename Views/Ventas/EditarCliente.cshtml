@{
    ViewData["Title"] = "Editar Cliente";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Editar Cliente</h1>
    <div class="card mb-4 shadow-lg">
        <div class="card-body">
            <form>
                <div class="col-md-6 mb-3">
                    <label for="id" class="form-label">Identificación</label>
                    <input type="text" class="form-control" id="id" value="1-0851-0456">
                </div>
                <div class="col-md-6 mb-3">
                    <label for="nombre" class="form-label">Nombre</label>
                    <input type="text" class="form-control" id="nombre" value="Rosa">
                </div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="PApellido" class="form-label">Primer Apellido</label>
                        <input type="text" class="form-control" id="PApellido" value="Monge">
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="SApellido" class="form-label">Segundo Apellido</label>
                        <input type="text" class="form-control" id="SApellido" value="Vega">
                    </div>
                </div>
                <div class="col-md-6 mb-3">
                    <label for="telefono" class="form-label">Teléfono</label>
                    <input type="text" class="form-control" id="telefono" value="8956-4594">
                </div>
                <div class="col-md-6 mb-3">
                    <label for="correo" class="form-label">Correo electrónico</label>
                    <input type="text" class="form-control" id="correo" value="rosaMonge65@example.com">
                </div>
                <div class="mb-3">
                    <label for="fechaNacimiento" class="form-label">Fecha de Nacimiento</label>
                    <input type="date" class="form-control form-control-lg" id="fechaNacimiento" value="1965-10-02">
                </div>
                <div class="d-grid gap-2 d-md-block">
                    <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> Guardar Cambios</button>
                    <a href="@Url.Action("Index", "Ventas")" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>
