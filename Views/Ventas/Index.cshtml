@{
    ViewData["Title"] = "Gestión de Ventas";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Gestión de Ventas</h1>
    <h3 class="mt-4"></h3>

    <div class="card mb-4">
        <div class="card-body">
            Aquí puedes gestionar las ventas. Usa la tabla a continuación para ver, agregar o editar las ventas realizadas.
        </div>
    </div>
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            Ventas Registradas
        </div>
        <div class="card-body">
            <table id="datatablesSimple">
                <thead>
                    <tr>
                        <th>Producto</th>
                        <th>Cantidad</th>
                        <th>Precio Unitario</th>
                        <th>Total</th>
                        <th>Fecha de Venta</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Producto</th>
                        <th>Cantidad</th>
                        <th>Precio Unitario</th>
                        <th>Total</th>
                        <th>Fecha de Venta</th>
                    </tr>
                </tfoot>
                <tbody>
                    <tr>
                        <td>Producto 1</td>
                        <td>5</td>
                        <td>$10.00</td>
                        <td>$50.00</td>
                        <td>2024/01/01</td>
                    </tr>
                    <!-- Aquí puedes agregar más filas de ventas -->
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/umd/simple-datatables.min.js" crossorigin="anonymous"></script>
    <script src="~/js/datatables-simple-demo.js"></script>
}
