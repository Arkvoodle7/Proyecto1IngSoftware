@model List<Proyecto1IngSoftware.Models.FacturaViewModel>

@{
    ViewData["Title"] = "Gestión de Ventas";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Gestión de Ventas</h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }
    <div class="d-flex justify-content-between align-items-center mb-4">
        <p class="lead">Administra las facturas desde esta página.</p>
        <a href="@Url.Action("Facturar", "Ventas")" class="btn btn-primary"><i class="fas fa-file-circle-plus"></i> Nueva Factura</a>
    </div>

    <div class="card mb-4 shadow-lg">
        <div class="card-header bg-primary text-white">
            <i class="fas fa-file-alt"></i> Facturas
        </div>
        <div class="card-body">
            <table class="table table-hover table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>Número</th>
                        <th>Cliente</th>
                        <th>Fecha</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var factura in Model)
                    {
                        <tr>
                            <td>@factura.NumFact</td>
                            <td>@factura.IdCliente</td>
                            <td>@factura.Fecha.ToShortDateString()</td>
                            <td>@factura.Total.ToString("C")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

 <div class="card mb-4 shadow-lg">
        <div class="card-body">
            <p class="lead">Administra los clientes. Puedes agregar, editar o eliminar clientes desde aquí.</p>
            <a href="@Url.Action("AgregarCliente", "Ventas")" class="btn btn-primary mb-3"><i class="fas fa-user-plus"></i> Agregar Cliente</a>
        </div>
    </div>
    <div class="card mb-4 shadow-sm">
        <div class="card-header bg-primary text-white">
            <i class="fas fa-users me-1"></i> Clientes Registrados
        </div>
        <div class="card-body">
            <table class="table table-hover table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>Identificación</th>
                        <th>Nombre</th>
                        <th>Teléfono</th>
                        <th>Correo electónico</th>
                        <th>Edad</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>1-0851-0456</td>
                        <td>Rosa Monge</td>
                        <td>8956-4594</td>
                        <td>rosaMonge65@example.com</td>
                        <td>59</td>
                        <td>
                            <a href="@Url.Action("EditarCliente", "Ventas", new { id = 1 })" class="btn btn-warning btn-sm me-2"><i class="fas fa-edit"></i> Editar</a>
                            <a href="#" class="btn btn-danger btn-sm"><i class="fas fa-trash-alt"></i> Eliminar</a>
                        </td>
                    </tr>
                    <!-- Aquí puedes agregar más clientes dinámicamente -->
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/js/all.min.js" crossorigin="anonymous"></script>
}
