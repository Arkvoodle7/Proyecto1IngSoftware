@{
    ViewData["Title"] = "Gestión de Compras";
}


<div class="container-fluid px-4">
    <h1 class="mt-4">Gestión de Compras</h1>
    <div class="card mb-4 shadow-lg">
        <div class="card-body">
            <p class="lead">Administra las órdenes de compra. Puedes agregar, editar o eliminar órdenes de compra, así como aplicarlas, desde aquí.</p>
            <a href="@Url.Action("GenerarOC", "Compras")" class="btn btn-primary mb-3"><i class="fa-solid fa-file"></i> Generar Orden de Compra</a>
        </div>
    </div>
    <div class="card mb-4 shadow-sm">
        <div class="card-header bg-primary text-white">
            <i class="fa-solid fa-cart-shopping"></i> Órdenes de Compra
        </div>
        <div class="card-body">
            <table class="table table-hover table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>Número</th>
                        <th>Proveedor</th>
                        <th>Producto</th>
                        <th>Precio Unitario</th>
                        <th>Cantidad</th>
                        <th>Total</th>
                        <th>Fecha de Compra</th>
                        <th>Aplicada</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>001</td>
                        <td>123</td>
                        <td>Panadol</td>
                        <td>$8.50</td>
                        <td>60</td>
                        <td>$510.00</td>
                        <td>2024/10/5</td>
                        <td>NO</td>
                        <td>
                            <a href="#" class="btn btn-success btn-sm"><i class="fa-solid fa-check"></i> Aplicar</a>
                            <a href="@Url.Action("EditarOC", "Compras", new { id = 1 })" class="btn btn-warning btn-sm me-2"><i class="fas fa-edit"></i> Editar</a>
                            <a href="#" class="btn btn-danger btn-sm"><i class="fas fa-trash-alt"></i> Eliminar</a>
                        </td>
                    </tr>
                    <!-- Aquí puedes agregar más órdenes de compra dinámicamente -->
                </tbody>
            </table>
        </div>
    </div>
    <div class="card mb-4 shadow-lg">
        <div class="card-body">
            <p class="lead">Administra los proveedores. Puedes agregar, editar o eliminar proveedores desde aquí.</p>
            <a href="@Url.Action("AgregarProv", "Compras")" class="btn btn-primary mb-3"><i class="fas fa-user-plus"></i> Agregar Proveedor</a>
        </div>
    </div>
    <div class="card mb-4 shadow-sm">
        <div class="card-header bg-primary text-white">
            <i class="fas fa-users me-1"></i> Proveedores Registrados
        </div>
        <div class="card-body">
            <table class="table table-hover table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>Código</th>
                        <th>Nombre</th>
                        <th>Acciones</th>

                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>123</td>
                        <td>gsk</td>
                        <td>
                            <a href="@Url.Action("EditarProveedor", "Compras", new { id = 1 })" class="btn btn-warning btn-sm me-2"><i class="fas fa-edit"></i> Editar</a>
                            <a href="#" class="btn btn-danger btn-sm"><i class="fas fa-trash-alt"></i> Eliminar</a>
                        </td>
                    </tr>
                    <!-- Aquí puedes agregar más proveedores dinámicamente -->
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/js/all.min.js" crossorigin="anonymous"></script>
}
