@{
    ViewData["Title"] = "Gestión de Auditoría";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Gestión de Auditoría</h1>
    <h3 class="mt-4"></h3>

    <!-- Filtros de Auditoría -->
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-filter me-1"></i>
            Filtros de Auditoría
        </div>
        <div class="card-body">
            <form asp-action="FiltrarAuditoria" method="post">
                <div class="row">
                    <!-- Filtro de Usuario -->
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="usuario">Usuario</label>
                            <input type="text" class="form-control" id="usuario" name="usuario" placeholder="Nombre de usuario">
                        </div>
                    </div>
                    <!-- Filtro de rango de fechas -->
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="fechaInicio">Fecha de Inicio</label>
                            <input type="date" class="form-control" id="fechaInicio" name="fechaInicio">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="fechaFin">Fecha de Fin</label>
                            <input type="date" class="form-control" id="fechaFin" name="fechaFin">
                        </div>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-12">
                        <button type="submit" class="btn btn-primary">Aplicar Filtros</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Tabla de Auditoría -->
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            Historial de Auditoría
        </div>
        <div class="card-body">
            <table id="datatablesSimple" class="table table-striped">
                <thead>
                    <tr>
                        <th>Fecha</th>
                        <th>Usuario</th>
                        <th>Acción</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>2024/01/01</td>
                        <td>admin</td>
                        <td>Inicio de sesión</td>
                    </tr>
                    <!-- Más registros de auditoría -->
                </tbody>
            </table>
        </div>
    </div>

    <!-- Botones de Exportación -->
    <div class="row mb-4">
        <div class="col-md-6">
            <button class="btn btn-danger btn-block">Exportar a PDF</button>
        </div>
        <div class="col-md-6">
            <button class="btn btn-success btn-block">Exportar a Excel</button>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/umd/simple-datatables.min.js" crossorigin="anonymous"></script>
    <script src="~/js/datatables-simple-demo.js"></script>
}
