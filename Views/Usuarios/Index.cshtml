@model List<Proyecto1IngSoftware.Models.UsuarioViewModel>

@{
    ViewData["Title"] = "Gestión de Usuarios";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Gestión de Usuarios</h1>
    <div class="card mb-4 shadow-lg">
        <div class="card-body">
            <p class="lead">Administra a los usuarios del sistema. Puedes agregar, editar o eliminar usuarios desde aquí.</p>
            <a href="@Url.Action("AgregarUsuario", "Usuarios")" class="btn btn-primary mb-3"><i class="fas fa-user-plus"></i> Agregar Usuario</a>
        </div>
    </div>
    <div class="card mb-4 shadow-sm">
        <div class="card-header bg-primary text-white">
            <i class="fas fa-users me-1"></i> Usuarios Registrados
        </div>
        <div class="card-body">
            <table class="table table-hover table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>Nombre</th>
                        <th>Correo</th>
                        <th>Rol</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var usuario in Model)
                    {
                        <tr>
                            <td>@usuario.Nombre</td>
                            <td>@usuario.Correo</td>
                            <td>@usuario.Rol</td>
                            <td>
                                <a href="@Url.Action("EditarUsuario", "Usuarios", new { id = usuario.Id })" class="btn btn-warning btn-sm me-2"><i class="fas fa-edit"></i> Editar</a>
                                <form asp-action="EliminarUsuario" method="post" style="display:inline">
                                    <input type="hidden" name="id" value="@usuario.Id" />
                                    <button type="submit" class="btn btn-danger btn-sm"><i class="fas fa-trash-alt"></i> Eliminar</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
